{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": [
            "node"
        ],
        
    },
    "include": [
        "src/**/*",
        "types/*.d.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}